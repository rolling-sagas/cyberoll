generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model System {
  id       Int       @id @default(autoincrement())
  template String

  session   Session @relation(fields: [sessionId], references: [id])
  sessionId Int @unique
}

model Chapter {
  id       Int  @id @default(autoincrement())
  template String
  rules    String?

  session   Session @relation(fields: [sessionId], references: [id])
  sessionId Int
}

model Session {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  author String?

  createdAt DateTime
  updatedAt DateTime?

  system System?

  chapters Chapter[]
}
