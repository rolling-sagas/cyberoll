{
  "extends": ["next/core-web-vitals", "plugin:storybook/recommended"],
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
    "no-undef": "warn",
    "react-hooks/exhaustive-deps": "off",
    "react-hooks/useMemo": "off",
    "jsx-a11y/alt-text": "off"
  }
}
